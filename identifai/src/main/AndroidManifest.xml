<?xml version="1.0" encoding="utf-8"?>
<manifest package="mcmaster.ca.identifai"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.InputController"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controllers.OutputController"
            android:screenOrientation="portrait" />
        <activity android:name=".controllers.RecentSearchesController" />
        <activity android:name=".controllers.PersonDetailController"></activity>
    </application>

</manifest>